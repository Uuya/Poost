= devise_error_messages!
%h2.center-align アカウント登録
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .row
    .input-field.col.s6.offset-s2
      %i.material-icons.prefix account_circle
      = f.text_field :name, autofocus: true, autocomplete: "name", id: "icon_prefix", class: "validate"
      %label{:for => "icon_prefix"} 名前
    .row
      .input-field.col.s6.offset-s2
        %i.material-icons.prefix lock
        = f.password_field :password, autocomplete: "new-password", id: "icon_prefix", class: "validate"
        %label{:for => "icon_prefix"}
          パスワード
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} 文字以上)
          %br/
      .row
        .input-field.col.s6.offset-s2
          %i.material-icons.prefix lock
          = f.password_field :password_confirmation, autocomplete: "new-password", id: "icon_prefix", class: "validate"
          %label{:for => "icon_prefix"} パスワード確認
        %button.btn.waves-effect.waves-light.blue{:name => "action", :type => "submit"}
          新規登録
        = render "users/shared/links"
