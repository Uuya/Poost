%h2.center-align ログイン
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .row
    .input-field.col.s6.offset-s2
      %i.material-icons.prefix account_circle
      = f.text_field :name, autofocus: true, autocomplete: "name", id: "icon_prefix", class: "validate"
      %label{:for => "icon_prefix"} 名前
    .row
      .input-field.col.s6.offset-s2
        %i.material-icons.prefix lock
        = f.password_field :password, autocomplete: "current-password", id: "icon_prefix", class: "validate"
        %label{:for => "icon_prefix"} パスワード
      - if devise_mapping.rememberable?
        .field
          = f.check_box :remember_me
          = f.label :remember_me
      %button.btn.waves-effect.waves-light.blue{:name => "action", :type => "submit"}
        ログイン
      = render "users/shared/links"
