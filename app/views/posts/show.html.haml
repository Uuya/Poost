.row
  .col.s12.m10
    .card-panel.grey
      %span.white-text
        = @post.content
      = link_to post_path(@post), method: :delete do
        %i.fa.fa-trash.fa-2x
      - if @post.favorited_by?(current_user)
        %td
          = link_to fav_posts_path(@post), class: "fav", remote: true do
            %i.fa.fa-star.fa-2x.yellow-star{:id => "#{@post.id}"}
      - else
        %td
          = link_to fav_posts_path(@post), class: "fav", remote: true do
            %i.fa.fa-star.fa-2x.black-star{:id => "#{@post.id}"}
